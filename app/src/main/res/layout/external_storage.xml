<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <Button
        android:id="@+id/public_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/external_storage_public_path"/>
    <Spinner
        android:id="@+id/public_type_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/public_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/private_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/external_storage_private_path"/>
    <Spinner
        android:id="@+id/private_type_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/private_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>