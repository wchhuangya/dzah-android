<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="15dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sms_pv_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:textColor="#555"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/sms_pv_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/sms_pv_see_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/sms_pv_read_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#555"
            android:textSize="16sp"/>

    </LinearLayout>

    <TextView
        android:id="@+id/sms_pv_num_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/sms_pv_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/sms_pv_receive_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/sms_pv_send_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#555"
        android:textSize="16sp"/>

</LinearLayout>