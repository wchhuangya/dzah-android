<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    
    <com.ch.wchhuangya.dzah.android.components.TimelineView
        android:id="@+id/canvas_timeline_view_item_timeline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:markerInCenter="false"
        app:marker_size="10dp"
        app:line_size="2dp"
        app:line="@color/canvas_divide"
        android:paddingTop="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/canvas_timeline_view_item_tv"
            android:paddingTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>