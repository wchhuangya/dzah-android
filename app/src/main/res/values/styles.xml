<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:listDivider">@drawable/rv_divider</item>
    </style>

    <!-- 自定义的样式父样式 -->
    <style name="Gesture"/>
    <style name="CustomLog"/>

    <!-- sample -->
    <!-- Basic Gesture Detect -->
    <style name="Gesture.BasicMsg">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <!-- log -->
    <style name="CustomLog.SampleOutput">
        <item name="android:padding">16dp</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>
    <style name="CustomLog.Log" parent="CustomLog.SampleOutput">
        <item name="android:typeface">monospace</item>
    </style>

    <!-- sample -->

    <!-- popupwindow -->
    <style name="PopupW" />

    <style name="PopupW.weichat_anim">
        <item name="android:windowEnterAnimation">@anim/weichat_fade_in</item>
        <item name="android:windowExitAnimation">@anim/weichat_fade_out</item>
    </style>

    <!-- timeline -->
    <declare-styleable name="timeline_style" >
        <attr name="marker" format="color|reference"/>
        <attr name="line" format="color|reference"/>
        <attr name="marker_size" format="dimension"/>
        <attr name="line_size" format="dimension"/>
        <attr name="line_orientation" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
        <attr name="markerInCenter" format="boolean"/>
    </declare-styleable>

    <style name="list_item_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
