        <attr name="rightText" format="string" />
    </declare-styleable>-->

    <declare-styleable name="ArcRatio"><!-- 圆弧比例图 -->
        <attr name="arcWidth" format="dimension" />
        <attr name="arcColor" format="reference|color" />
        <attr name="arcRadian" format="float" />
        <attr name="disBetweenArcAndCircle" format="dimension" />
        <attr name="circleColor" format="reference|color" />
        <attr name="titleColor" format="reference|color" />
        <attr name="titleText" format="string" />
        <attr name="titleSize" format="integer" />
    </declare-styleable>

    <declare-styleable name="BgBorderTv"><!-- 有背景、有边框的 TextView -->
        <attr name="borderWidth" format="dimension|reference" />
        <attr name="borderColor" format="color|reference" />
        <attr name="bgColor" format="color|reference" />
    </declare-styleable>

    <declare-styleable name="AudioBarChart">
        <attr name="barWidth" format="reference|dimension" /><!-- 条的宽度,默认 3dp -->
        <attr name="barStartColor" format="reference|color" /><!-- 条颜色的起始值,默认红色 -->
        <attr name="barEndColor" format="reference|color" /><!-- 条颜色的结束值,默认橙色 -->
        <attr name="barSpace" format="reference|dimension" /><!-- 条间距,默认 1dp -->
        <attr name="wholeBgColor" format="reference|color" /><!-- 整个的背影颜色,默认白色 -->
        <attr name="changeFrenquency" format="integer" /><!-- 条变化的频率,单位毫秒,默认 300 -->
    </declare-styleable>

    <declare-styleable name="BasicGraphics">
        <attr name="v_bg" format="reference|color" /><!-- View 的背景颜色 -->
        <attr name="v_type" format="integer" /><!-- View 的类型，1-圆点，2-直线，3-折线 -->
        <attr name="v_paint_color" format="reference|color" /><!-- 绘制 View 时画笔的颜色 -->
        <attr name="v_length" format="integer" /><!-- 直线的长度 -->
        <attr name="v_rate" format="integer" /><!-- 圆环的变化比率，单位毫秒 -->
    </declare-styleable>
</resources>